<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Clients.Recorrido">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextOrigin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Origen" />

        <EditText
            android:id="@+id/editTextDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destino" />

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Solicitud" />

        <Button
            android:id="@+id/buttonShowRoutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar Rutas en Google Maps" />

        <Button
            android:id="@+id/buttonShowDriverLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar UbicaciÃ³n del Conductor" />

    </LinearLayout>
</FrameLayout>
