<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- ScrollView to handle overflow content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <Button
                android:id="@+id/buttonSeguirRuta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seguir Ruta"
                android:textAllCaps="false"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"/>
            <!-- Button for reporting location -->
            <Button
                android:id="@+id/buttonReportLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reportar UbicaciÃ³n"
                android:textAllCaps="false"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"/>

            <!-- CardView for location history -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textViewLocationHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Historial de Ubicaciones"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
